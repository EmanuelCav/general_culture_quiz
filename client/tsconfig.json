{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2017",
    "outDir": "build",
    "jsx": "react-jsx",
    "typeRoots": ["/types"],
  },
  "exclude": ["node_modules"],
  "include": ["app"],
  "files": ["types/env.d.ts"]
}